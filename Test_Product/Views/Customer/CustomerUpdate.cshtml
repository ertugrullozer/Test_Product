@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "CustomerUpdate";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">

    @Html.Label("ID")
    @Html.TextBoxFor(x=>x.ID,new {@class="form-control"})
    <br />
    @Html.Label("Müşteri Ad")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Şehir")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Meslek")
    @Html.DropDownListFor(x=>x.JopID,(List<SelectListItem>)ViewBag.u,new {@class="form-control"})
    <button class="btn btn-success mt-3">Güncelle</button>
</form>

