@using EntityLayer.Concrete
@model List<Jop>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Meslek Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.JopID</td>
            <td>@item.Name</td>
            <td><a href="/Jop/JopDelete/@item.JopID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Jop/JopUpdate/@item.JopID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Jop/JopAdd" class="btn btn-info">Meslek Ekle</a>
